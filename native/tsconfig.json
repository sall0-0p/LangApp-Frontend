{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "types": ["node", "@nativescript/types"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.vue",
    "nativescript.config.ts"
  ],
  "exclude": [
    "node_modules",
    "App_Resources",
    "platforms"
  ]
}
